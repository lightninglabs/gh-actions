    "@actions/io": "^1.0.2",
    "semver": "^7.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@vercel/ncc": "^0.23.0",
    "dotenv": "^8.2.0",
    "jest": "^26.1.0",
    "jest-circus": "^26.1.0",
    "jest-runtime": "^26.1.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
